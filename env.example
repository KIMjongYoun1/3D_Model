# ===================
# Application
# ===================
NODE_ENV=development
APP_NAME=VirtualTryOn
APP_URL=http://localhost:3000

# ===================
# Database (PostgreSQL)
# ===================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/virtual_tryon
DB_HOST=localhost
DB_PORT=5432
DB_NAME=virtual_tryon
DB_USER=postgres
DB_PASSWORD=postgres

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================
# Backend URLs
# ===================
JAVA_API_URL=http://localhost:8080
PYTHON_API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_PYTHON_API_URL=http://localhost:8000

# ===================
# Storage (로컬 파일 시스템 - 무료)
# ===================
# 로컬 파일 시스템 사용 (프로덕션에서는 클라우드 스토리지로 변경 가능)
STORAGE_TYPE=local  # local: 로컬 파일 시스템, s3: S3 호환 스토리지
STORAGE_PATH=./storage  # 로컬 저장 경로 (상대 경로 또는 절대 경로)
# S3 호환 스토리지 사용 시 (선택사항)
# S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_BUCKET=tryon-images

# ===================
# Auth (JWT)
# ===================
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# ===================
# Payment (결제 시뮬레이션)
# ===================
# 실제 PG사 연동 없이 시뮬레이션 모드로 동작
# 성공/실패만 테스트 가능
PAYMENT_SIMULATION_MODE=true
PAYMENT_SUCCESS_RATE=0.9  # 결제 성공 확률 (0.0 ~ 1.0, 기본값 0.9 = 90%)

# ===================
# AI Services
# ===================
AI_SERVER_URL=http://localhost:8000
# HuggingFace Token (선택사항 - 대부분 모델은 토큰 없이 사용 가능)
# HUGGINGFACE_TOKEN=hf_xxx

# ===================
# External APIs (무료 대안 사용)
# ===================
# Ready Player Me 제거 - MakeHuman (무료 오픈소스) 사용
# READY_PLAYER_ME_API_KEY=xxx

